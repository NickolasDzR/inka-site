mixin solution(value = false)
    +b.SECTION.solution#solution
        .container-fix
            .row(style="position: relative;")
                +e.UL.content
                    each val, i in value.solutionContent
                        +e.LI.item(data-index=`index_1`)
                            +e.item-wrp
                                +e.P.sign
                                    +icon({
                                        name: "gear",
                                        class: "solution__svg"
                                    })
                                    |   Inka. How it works
                                +e.P.title #{val[0]}
                                +e.P.text #{val[1]}
                            +e.IMG.img(class="lozad" data-src=`img/content/${val[2]}.webp` data-srcset=`img/content/${val[3]}.webp 2x`)
                +e.fixed
                    +e.fixed-items
                        each val, i in value.solutionContent
                            -
                                var
                                    arImg = ["one", "two", "three", "four"]
                                    className = "_" + `${arImg[i]}`
                            if i > 0
                                +e.IMG.img-fixed(class=className  src=`img/content/${val[2]}.webp` srcset=`img/content/${val[2]}.webp 2x`)
                            else
                                +e.IMG.img-fixed._show(class="_one" src=`img/content/${val[2]}.webp` srcset=`img/content/${val[3]}.webp 2x`)
