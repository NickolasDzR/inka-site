mixin steps(value = false)
    +b.SECTION.steps#steps
        .container
            .row
                +e.H2.heading #{value.heading}
                +e.wrp
                    +e.UL.list
                        each img, i in value.imagesUrl
                            +e.LI.item
                                +e.number
                                    +e.number-text-wrp
                                        +e.number-text #{i}
                                +e.SPAN.text #{value.text[i]}
                    +e.curve-wrp
                        each val, i in value.imagesUrl
                            if i === 1
                                +e.IMG.curve_top(class="lozad" data-src=`img/content/curve-top.webp` data-srcset=`img/content/curve-top@x2.webp 2x` media="(min-width: 768px)")
                            if i === 2
                                +e.IMG.curve_bottom(class="lozad" data-src=`img/content/curve-bottom.webp` data-srcset=`img/content/curve-bottom@x2.webp 2x` media="(min-width: 768px)")
